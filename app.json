{
  "expo": {
    "name": "SafeSteps",
    "slug": "safesteps",
    "scheme": "safesteps",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "runtimeVersion": "1.0.0",
    "updates": {
      "enabled": false
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safesteps.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SafeSteps uses your location to show your live position on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeSteps needs your location in the background for Active Tracking and Emergency mode.",
        "UIBackgroundModes": ["location", "processing"]
      }
    },
    "android": {
      "package": "com.safesteps.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "VIBRATE",
        "INTERNET",
        "POST_NOTIFICATIONS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SafeSteps to access your location in the background for tracking and emergency features."
        }
      ],
      "expo-notifications",
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.0.21"
          }
        }
      ]
    ],
    "extra": {
      "SUPABASE_URL": "https://YOUR-PROJECT.supabase.co",
      "SUPABASE_ANON_KEY": "YOUR_SUPABASE_ANON_KEY",
      "API_BASE_URL": "https://api.safesteps.yourdomain.com",
      "eas": {
        "projectId": "9ddfe9ec-ef9e-4577-8cfa-4558e27b064c"
      }
    },
    "owner": "thedevguy0101"
  }
}
