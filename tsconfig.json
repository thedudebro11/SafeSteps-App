{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "customConditions": ["react-native"],

    // âœ¨ Key additions
    "types": ["react", "react-native", "jest"],

    // Keep your path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/ui/*"]
    }
  },

  // Keep your project files
  "files": ["src/types/global.d.ts", "src/types/cssinterop.d.ts"],
  "include": ["App.tsx", "src/**/*"]
}
